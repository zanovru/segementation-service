FROM golang:alpine as builder

WORKDIR /app

COPY ../go.mod go.sum ./

RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o ./build/segment-service cmd/main.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /app

COPY --from=builder /app/build/segment-service .
COPY --from=builder /app/config config

EXPOSE 8080

CMD ["/app/segment-service"]

